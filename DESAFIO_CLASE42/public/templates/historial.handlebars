<div class="mt-5">

  {{#if this}}
    <h2 class="text-center">Productos cargados</h2>

    <table class="table table-dark table-striped mx-auto p-1">
      <thead>
        <tr class="text-center text-warning">
          <th style="width: 33%;">NOMBRE</th>
          <th style="width: 33%;">PRECIO</th>
          <th style="width: 33%;">FOTO</th>
        </tr>
      </thead>
      <tbody>
        {{#each this}}
          <tr>
            <td class="text-center">
              {{this.nombre}}
            </td>
            <td class="text-center">
              {{this.precio}}
            </td>
            <td class="text-center">
              <img src="{{this.foto}}" height="25" />
            </td>
          </tr>
        {{/each}}
      </tbody>
    </table>

  {{else}}
    <h4 class="alert alert-danger text-center">NO HAY PRODUCTOS!</h4>
  {{/if}}

</div>