html
  head
    LInk(href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous")
    title Formulario
  body
        h1(class="text-center mt-5") Cargar producto
        div(class="container w-50 mx-auto")
            form(action="/productos", method="post" class="bg-light p-4 rounded border border-secondary my-4")
                div(class="mb-2 row")
                    label(for="nombre" class="col-sm-3 col-md-2 col-form-label") Nombre
                    div(class="col-sm-9 col-md-10")
                        input(type="text" id="nombre" name="nombre" class="form-control" required) 
                div(class="mb-2 row")
                    label(for="precio" class="col-sm-3 col-md-2 col-form-label") Precio
                    div(class="col-sm-9 col-md-10")
                        input(type="text" id="precio" name="precio" class="form-control" required) 
                div(class="mb-2 row")
                    label(for="foto" class="col-sm-3 col-md-2 col-form-label") Foto
                    div(class="col-sm-9 col-md-10")
                        input(type="text" id="foto" name="foto" class="form-control" required) 

                button(type="submit" class="btn btn-success w-100 text-center") Enviar
            a(href="/productos" type="button" class="btn btn-danger w-100") VER HISTORIAL 
