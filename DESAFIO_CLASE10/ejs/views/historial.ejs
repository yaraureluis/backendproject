<!DOCTYPE html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>PRODUCTOS - EJS</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous" />
  </head>

  <body>
    <div class="container w-50 mx-auto mt-5">
      <h1 class="text-center">Productos cargados</h1>

      <% const hayProductos = productos.length > 0; %> <% if(hayProductos){ %>

      <table class="table table-dark table-striped mx-auto p-1">
        <thead>
          <tr class="text-center text-warning">
            <th style="width: 33%">NOMBRE</th>
            <th style="width: 33%">PRECIO</th>
            <th style="width: 33%">FOTO</th>
          </tr>
        </thead>
        <tbody>
          <% for (const producto of productos) {%>
          <tr>
            <td class="text-center"><%=producto.nombre%></td>
            <td class="text-center"><%=producto.precio%></td>
            <td class="text-center">
              <img src="<%=producto.foto%>" width="25" height="25" />
            </td>
          </tr>
          <%};%>
        </tbody>
      </table>
      <% } else{ %>
      <h3 class="alert alert-danger text-center">NO HAY PRODUCTOS!</h3>
      <% } %>
      <a class="btn btn-danger w-100" href="/">CARGAR PRODUCTO</a>
    </div>
  </body>
</html>
