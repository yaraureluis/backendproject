{{#if this}}

  <ul>
    {{#each this}}
      <li class="small">
        <img src="{{this.author.avatar}}" height="20px" />
        {{!-- {{this.id}}
        {{this.author.nombre}}
        {{this.author.apellido}}
        {{this.author.edad}} --}}
        {{this.author.alias}}:
        {{this.text.mensaje}}
        <hr />

      </li>
    {{/each}}
  </ul>

{{else}}
  <h4 class="alert alert-danger text-center">NO HAY MENSAJES!</h4>
{{/if}}